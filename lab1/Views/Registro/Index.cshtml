@model lab1.Models.Registro


<div class="text-center">
    <h1 class="display-4">REGISTRO DE ALUMNO AL CURSO</h1>
    <form asp-controller="Registro" asp-action="Create">

        <div class="form-group">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Creditos" class="control-label"></label>
            <input asp-for="Creditos" class="form-control" />
            <span asp-validation-for="Creditos" class="text-danger"></span>
        </div>

        <br />
        <h5>Curso</h5>
        <div class="form-check" >
                <input class="form-check-input"  type="checkbox" value="Matematica">
                <label> Matematica</label>
            </div> 
            <div class="form-check" >
                <input class="form-check-input" type="checkbox" value="Lenguaje">
                <label> Lenguaje</label>
            </div> 
            <div class="form-check" >
                <input class="form-check-input" type="checkbox" value="Historia">
                <label> Historia</label>
            </div> 

        <br />


        <button type="submit" class="btn btn-primary">Registrar</button>

    </form>


    <h1>@ViewData["Message"]</h1>
    <h1>@ViewData["TotalCursos"]</h1>
    <h1>@ViewData["Igv"]</h1>
    <h1>@ViewData["Total"]</h1>

</div>
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}